                tr: td Level
                    //td.factory-level= factory.level
                    td.factory-level= factory.level
                tr: td Creator
                    td.factory-creator= factory.creatorName
                tr: td Team
                    td.factory-team= factory.teamName
                tr: td Defence
                    td.factory-defence= factory.defence
