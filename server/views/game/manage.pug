extends ../base/page

block content
    case game.stage
        when 0
            .nd2-card.wow.fadeInUp
                .card-title.has-supporting-text
                    h3.card-primary-title Start game

                .card-supporting-text.has-action.has-title
                    p The game is ready. Click the button below to start.

                .card-action
                    .row.between-xs: .col-xs-12: .box
                        a.ui-btn.waves-effect.waves-button.waves-effect.waves-button.clr-primary.action-game-start(href='#', data-transition='slide', data-rel='popup')
                            i.zmdi.zmdi-play
                            | &nbsp;&nbsp;Start game

        when 1
            .nd2-card.wow.fadeInUp
                .card-title.has-supporting-text
                    h3.card-primary-title Finish game

                .card-supporting-text.has-action.has-title
                    p The game is currently active. Click the button below to finish the game.

                .card-action
                    .row.between-xs: .col-xs-12: .box
                        a.ui-btn.waves-effect.waves-button.waves-effect.waves-button.clr-primary.action-game-stop(href='#', data-transition='slide', data-rel='popup')
                            i.zmdi.zmdi-stop
                            | &nbsp;&nbsp;Finish game

        when 2
            .nd2-card.wow.fadeInUp
                .card-title.has-supporting-text
                    h3.card-primary-title Game finished

                .card-supporting-text.has-action.has-title
                    p The game has been finished. You may click the button below to resume the game form the current state.

                .card-action
                    .row.between-xs: .col-xs-12: .box
                        a.ui-btn.waves-effect.waves-button.waves-effect.waves-button.clr-primary.action-game-resume(href='#', data-transition='slide', data-rel='popup')
                            i.zmdi.zmdi-fast-forward
                            | &nbsp;&nbsp;Resume game

    .nd2-card.wow.fadeInUp
        .card-title.has-supporting-text
            h3.card-primary-title Broadcast

        .card-supporting-text.has-action.has-title
            p A broadcast allows you to message all joined players in this game.

        .card-action
            .row.between-xs: .col-xs-12: .box
                a.ui-btn.waves-effect.waves-button.waves-effect.waves-button.clr-primary.action-broadcast(href='#', data-transition='slide', data-rel='popup')
                    i.zmdi.zmdi-mail-send
                    | &nbsp;&nbsp;Broadcast message

    .nd2-card.wow.fadeInUp
        .card-title.has-supporting-text
            h3.card-primary-title Language

        .card-supporting-text.has-action.has-title
            p Change the language of various elements in this game, to give it a different style.

        .card-action
            .row.between-xs: .col-xs-12: .box
                a.ui-btn.waves-effect.waves-button.waves-effect.waves-button.clr-primary(href='/game/' + game.id + '/language', title='Visit the language manager')
                    i.zmdi.zmdi-comment-text
                    | &nbsp;&nbsp;Language manager
